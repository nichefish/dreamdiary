            <label for="emailDomain"><label for="emplymEmailDomainSelect">@</label></label>
        </div>
        <div class="col-lg-2 col-5 vertical-center">
            <input type="text" name="emplym.emplymEmailDomain" id="emplymEmailDomain" class="form-control form-control-solid no-space required"
                   value="${(user.emplym.emplymEmailDomain)!}" placeholder="직접입력" maxlength="20" />
