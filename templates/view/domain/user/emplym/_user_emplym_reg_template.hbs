<#--
 * 사용자 인사정보(user_emplym) > Template
 * (freemarker 맥락 하에서 쓰이므로 freemarker 형식으로 데이터 바인딩)
 * @included_in : user_reg_form
 -->

<script type="text/x-handlebars-template" id="user_emplym_template">

    <div class="separator my-8"></div>

    <#--begin::Row-->
    <div class="row mb-4">
        <div class="col-xl-2">
            <div class="fs-6 fw-bold col-form-label text-sm-start text-lg-center required">
                <label for="userNm" class="cursor-help"
                       data-bs-toggle="tooltip" data-bs-placement="top" data-bs-dismiss="click" title="직원명(실명)을 입력합니다.">
                    직원명
                    <i class="bi bi-question-circle"></i>
                </label>
            </div>
        </div>
        <div class="col-xl-2">
            <input type="text" name="emplym.userNm" id="userNm" class="form-control form-control-solid required"
                   value="${(user.emplym.userNm)!}" placeholder="이름" maxlength="20" />
            <div class="form-text text-noti">
                <@spring.message "noti.req.nicknm"/>
            </div>
            <div id="userNm_validate_span">
        </div>
    </div>
    <#--begin::Row-->
    <div class="row mb-4">
        <div class="col-xl-2">
            <div class="fw-bold col-form-label text-sm-start text-lg-center required">
